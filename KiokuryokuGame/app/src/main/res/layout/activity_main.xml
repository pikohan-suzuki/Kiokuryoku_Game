<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="#FFDEC6">

    <Button
            android:text="@string/game_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/start"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="@+id/record_text"
            app:layout_constraintEnd_toEndOf="@+id/record_text" app:layout_constraintHorizontal_bias="0.505"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/guideline12"
            app:layout_constraintVertical_bias="0.35000002" android:background="@drawable/ok_button_background"
            android:textColor="#ffffff" android:fontFamily="sans-serif-black"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/record_text"
            android:text="@string/record"
            android:layout_marginStart="60dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="60dp" app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/record_background" app:layout_constraintBottom_toTopOf="@+id/guideline12"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/guideline11"
            android:textAlignment="center"
            android:gravity="center" android:textColor="#FF3F00"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" android:textSize="16sp"
            android:fontFamily="sans-serif-black"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/title"
            android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/guideline11"
            app:layout_constraintVertical_bias="0.0"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline11"
                                          android:orientation="horizontal"
                                          app:layout_constraintGuide_percent="0.49"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline12"
                                          android:orientation="horizontal"
                                          app:layout_constraintGuide_percent="0.6"/>

</android.support.constraint.ConstraintLayout>