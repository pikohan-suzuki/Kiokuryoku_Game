<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@drawable/input_background">

        <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                              android:id="@+id/guideline9"
                                              android:orientation="horizontal"
                                              app:layout_constraintGuide_percent="0.66"/>
        <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                              android:id="@+id/guideline8"
                                              android:orientation="horizontal"
                                              app:layout_constraintGuide_percent="0.33"/>
        <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                              android:id="@+id/guideline7"
                                              android:orientation="vertical"
                                              app:layout_constraintGuide_percent="0.33"/>
        <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                              android:id="@+id/guideline"
                                              android:orientation="vertical"
                                              app:layout_constraintGuide_percent="0.66"/>
        <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                              android:id="@+id/guideline4"
                                              android:orientation="vertical"
                                              app:layout_constraintGuide_percent="0.5"/>
        <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                              android:id="@+id/guideline3"
                                              android:orientation="horizontal"
                                              app:layout_constraintGuide_percent="0.5"/>
        <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/cat_image"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="blue"
                app:layout_constraintTop_toTopOf="@+id/guideline8"
                app:layout_constraintBottom_toTopOf="@+id/guideline9"
                android:src="@drawable/cat_image_background"
                android:scaleType="fitCenter" app:layout_constraintStart_toStartOf="@+id/guideline"
                android:clickable="false"
        />
        <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/sheep_image"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:text="orange"
                app:layout_constraintTop_toTopOf="@+id/guideline9"
                app:layout_constraintStart_toStartOf="@+id/guideline7"
                app:layout_constraintEnd_toStartOf="@+id/guideline"
                android:src="@drawable/sheep_image_background"
                android:scaleType="fitCenter"
                android:clickable="false"
        />
        <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/dog_image"
                tools:text="red"
                app:layout_constraintBottom_toTopOf="@+id/guideline8"
                app:layout_constraintStart_toStartOf="@+id/guideline7"
                app:layout_constraintEnd_toStartOf="@+id/guideline"
                android:src="@drawable/dog_image_background"
                android:scaleType="fitCenter" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintVertical_bias="0.0"
                android:clickable="false"/>
        <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/bird_image"
                tools:text="green"
                app:layout_constraintTop_toTopOf="@+id/guideline8"
                app:layout_constraintBottom_toTopOf="@+id/guideline9"
                app:layout_constraintEnd_toStartOf="@+id/guideline7"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/bird_image_background"
                android:scaleType="fitCenter"
                android:clickable="false"/>

</android.support.constraint.ConstraintLayout>